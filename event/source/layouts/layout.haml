!!!
%html
  %head
    %meta{:charset => "utf-8"}
    
    %meta{:content => "IE=edge,chrome=1", "http-equiv" => "X-UA-Compatible"}
    
    %title
      = current_page.data.title || "Gated Form Landing Page"
    
    = stylesheet_link_tag "normalize", "main", "http://red-hat-overpass-fonts.s3.amazonaws.com/overpass.css"
    = javascript_include_tag "http://ajax.googleapis.com/ajax/libs/jquery/1.11.2/jquery.min.js", "main"
  
  %body
    %header.full-width-background
      %a{:href => "//www.redhat.com"}
        .logo-rh
      %h1
        = current_page.data.title || "Gated Form Landing Page"
    = yield
    = javascript_include_tag "interaction"